<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <conversionRule conversionWord="clr" converterClass="com.llmb.log.ColorConverter"/>
    <conversionRule conversionWord="dynamic" converterClass="com.llmb.log.DynamicTypeConverter"/>

    <!--通用颜色日志输出-->
    <property name="GENERAL_COLOR_PATTERN"
              value="%clr(%d{yyyy-MM-dd HH:mm:ss}){bold,green} %clr(%-5level) %clr([%thread]){bright-cyan} %clr(%logger) %m%n"/>

    <!--通用无颜色日志输出-->
    <property name="GENERAL_NO_COLOR_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger %m%n"/>

    <!--ai-chat日志输出-->
    <property name="AI_CHAT_COLOR_PATTERN" value="%clr(%dynamic: %n  %m){dynamic} %n "/>


    <appender name="GENERAL_CONCOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>${GENERAL_COLOR_PATTERN}</Pattern>
        </encoder>
    </appender>

    <appender name="AI_CHAT_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>${AI_CHAT_COLOR_PATTERN}</Pattern>
        </encoder>
    </appender>

    <appender name="AI_CHAT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/ai-chat.log</file>
        <encoder>
            <Pattern>${AI_CHAT_COLOR_PATTERN}</Pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/ai-chat.%d{yyyy-MM}.%i.log</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
        </rollingPolicy>
        <append>true</append>
    </appender>


    <appender name="GENERAL_NO_COLOR" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%clr(%d{yyyy-MM-dd HH:mm:ss}){faint} %clr(%-5level) %clr([%thread]){bright-cyan}
                %clr(%logger)%m%n
            </Pattern>
        </encoder>
    </appender>

    <logger name="aiChat" level="trace" additivity="false">
        <appender-ref ref="AI_CHAT_CONSOLE"/>
        <appender-ref ref="AI_CHAT_FILE"/>
    </logger>


    <root level="info">
        <appender-ref ref="GENERAL_CONCOLE"/>
    </root>
</configuration>
